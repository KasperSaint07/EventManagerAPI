# Server port
PORT=5000

# MongoDB connection string
MONGO_URI=mongodb://localhost:27017/eventmanager

# JWT secret key
JWT_SECRET=your_secret_key_here

# SMTP Email Configuration
# For Mailtrap (testing): https://mailtrap.io
# For SendGrid: host=smtp.sendgrid.net, port=587
# For Mailgun: host=smtp.mailgun.org, port=587
SMTP_HOST=sandbox.smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password
SMTP_FROM=EventManager <noreply@eventmanager.com>
